<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login"
    tools:context=".DaftarFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:layout_marginBottom="80dp"
    android:layout_marginTop="25dp"
    android:layout_gravity="center"
    android:textStyle="bold"
    android:textColor="@color/white"
    android:text="Datar Harga"
    android:textSize="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Banner"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="textStart" />
            <Spinner
                android:id="@+id/pilih1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/lihatbanner"
                android:textAlignment="center"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Brosur"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="textStart" />
            <Spinner
                android:id="@+id/pilih2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/lihatbrosur"
                android:textAlignment="center"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Kemasan"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="textStart" />
            <Spinner
                android:id="@+id/pilih3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/lihatkemasan"
                android:textAlignment="center"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Logo"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="textStart" />
            <Spinner
                android:id="@+id/pilih4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/lihatlogo"
                android:textAlignment="center"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Pamflet"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="textStart" />
            <Spinner
                android:id="@+id/pilih5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/lihatpamflet"
                android:textAlignment="center"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Undangan"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="textStart" />
            <Spinner
                android:id="@+id/pilih6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/lihatundangan"
                android:textAlignment="center"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>